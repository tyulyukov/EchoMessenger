<UserControl x:Class="EchoMessenger.UI.Controls.Buttons.SettingsButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EchoMessenger.UI.Controls.Buttons"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Border x:Name="MainButton" Background="Transparent" Padding="10 5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border x:Name="SettingBorder" CornerRadius="5" Margin="10 5" Width="23" Height="23" Background="HotPink">
                <Border x:Name="SettingIconBorder" Margin="5"></Border>
            </Border>

            <TextBlock x:Name="SettingTextBlock" Grid.Column="1" Margin="10,-3,10,0" Foreground="White" FontFamily="Segoe UI" TextTrimming="CharacterEllipsis" FontSize="12.5" VerticalAlignment="Center" HorizontalAlignment="Left">SettingName</TextBlock>
        </Grid>
    </Border>
</UserControl>
